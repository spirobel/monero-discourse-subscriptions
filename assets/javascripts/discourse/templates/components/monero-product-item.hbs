<h2>{{product.name}}</h2>

<p class="product-description">
  {{html-safe product.description}}
</p>
  {{#if product.stagenet}}

<p class="wallet-stagenet">
stagenet
</p>
  {{/if}}
{{#if isLoggedIn}}
  <div class="product-purchase">
      {{#if product.subscribed}}
      <span class="purchased">&#x2713; {{i18n "monero_discourse_subscriptions.subscribe.subscribed_until"}} {{endDateFormated}}
</span>
        {{#link-to
          "monero-products.show"
          product.id
          class="btn btn-primary"
        }}
          {{i18n "monero_discourse_subscriptions.subscribe.prolong"}}
        {{/link-to}}
      {{else}}


        {{#link-to
          "monero-products.show"
          product.id
          class="btn btn-primary"
        }}
          {{i18n "monero_discourse_subscriptions.subscribe.title"}}
        {{/link-to}}
    {{/if}}
</div>
{{/if}}
